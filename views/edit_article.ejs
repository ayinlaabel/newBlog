<% include ./header %>
<div class="edit">
    <div class="edit_article">
        <form action="/article/edit/<%= article._id %>" method="POST" class="form">
            <%- messages('message', locals) %>
            <div class="form__group">
                <input type="text" name="title" class="form__input" id="title" placeholder="Article Title" value="<%= article.title %>" >
                <label for="title" class="form__label">Article Title</label>
            </div>
            <div class="form__group">
                <textarea name="summary" id="summary" cols="30" rows="10" class="form__input" placeholder="Summary"><%= article.summary %></textarea>
                <label for="summary" class="form__label">Summary</label>
            </div>
            <div class="form__group">
                <textarea name="article" id="article" cols="30" rows="10" class="form__input" placeholder="Article"><%= article.article %></textarea>
                <label for="article" class="form__label">Article</label>
            </div>
            
            <button class="btn btn-primary form-control">Submit</button>
        </form>
    </div>
</div>
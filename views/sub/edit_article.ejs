<% include ./header %>
<div class="row">
    <div class="col-3">

    </div>
    <div class="col-6">
       <div class="edit">
            <div class="edit_article">
                <form action="/article/edit/<%= article._id %>" method="POST" class="articleForm">
                    <%- messages('message', locals) %>
                    <div class="form__group">
                        <input type="text" name="title" class="form__input" id="title" placeholder="Article Title" value="<%= article.title %>" >
                        <label for="title" class="form__label">Article Title</label>
                    </div>
                    <div class="form__group">
                        <textarea name="summary" id="summary" cols="30" rows="10" class="form__textarea" placeholder="Summary"><%= article.summary %></textarea>
                        <label for="summary" class="form__label--textarea">Summary</label>
                    </div>
                    <div class="form__group">
                        <textarea name="article" id="article" cols="30" rows="10" class="form__textarea" placeholder="Article"><%= article.article %></textarea>
                        <label for="article" class="form__label--textarea">Article</label>
                    </div>
                    
                    <button class="btn btn-primary primary-btn">Submit</button>
                </form>
            </div>
        </div> 
    </div>
    <div class="col-3">

    </div>
</div>

<% include ./footer %>

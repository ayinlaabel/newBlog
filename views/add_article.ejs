<% include ./header %>
<div class="add">
    <div class="add__article">
        <form action="/article/article" method="post" class="form">
            <%- messages('message', locals) %>
            <div class="form__group">
                <input type="text" name="title" class="form__input" id="title" placeholder="Article Title">
                <label for="title" class="form__label">Article Title</label>
            </div>
            <div class="form__group">
                <textarea name="summary" id="summary" cols="30" rows="10" class="form__input" placeholder="Summary"></textarea>
                <label for="summary" class="form__label">Summary</label>
            </div>
            <div class="form__group">
                <textarea name="article" id="article" cols="30" rows="10" class="form__input" placeholder="Article"></textarea>
                <label for="article" class="form__label">Article</label>
            </div>
            
            <button class="btn btn-primary form-control">Submit</button>
        </form>
    </div>
</div>
<% include ./footer %>